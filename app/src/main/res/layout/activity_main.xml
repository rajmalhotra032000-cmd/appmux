<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md3_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md3_surface"
        app:title="@string/title_appmux"
        app:titleCentered="true"
        app:menu="@menu/menu_main"
        app:layout_scrollFlags="scroll|enterAlways"
        android:contentDescription="@string/content_desc_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:padding="16dp">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="3"
            android:useDefaultMargins="true">

            <include
                android:id="@+id/tile_apps"
                layout="@layout/view_tile" />
            <include
                android:id="@+id/tile_settings"
                layout="@layout/view_tile" />
            <include
                android:id="@+id/tile_contacts"
                layout="@layout/view_tile" />
            <include
                android:id="@+id/tile_folders"
                layout="@layout/view_tile" />
            <include
                android:id="@+id/tile_files"
                layout="@layout/view_tile" />
            <include
                android:id="@+id/tile_websites"
                layout="@layout/view_tile" />
        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


